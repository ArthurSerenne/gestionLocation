    <body>
        {% block body %}    
            {% include 'navbar.html.twig' %}
            <div class="details">
                <div class="container">
                    <div class="row">
                        <div class="col-md-5">
                            <img class="imgDetails" src="../img/m2.jpg" alt="">
                            <form action="" method="post">
                                <label for="nom">Nom Résidence<span>*</span></label>
                                <input type="text" id="nom" name="nom" value=""/>

                                <label for="Adresse">Adresse<span>*</span></label>
                                <input type="text" id="Adresse" name="Adresse"/>

                                <label for="postal">Code postal<span>*</span></label>
                                <input type="text" id="postal" name="postal"/>

                                <label for="Ville">Ville<span>*</span></label>
                                <input type="text" id="Ville" name="Ville"/>

                                <label for="Pays">Pays<span>*</span></label>
                                <input type="text" id="Pays" name="Pays"/>

                                <label for="Gabarit">Gabarit inventaire<span>*</span></label>
                                <input type="file" id="Gabarit" name="Gabarit"/>

                                <label for="Photo">Photo<span>*</span></label>
                                <input type="file" id="Photo" name="Photo"/>

                                <button class="btn btn-success" type="submit">Mettre à jour les données</button>
                            </form>
                        </div>
                        <div class="col-md-7">
                        <h4>Résidence Saint-Vincent</h4>
                        <button class="btn btn-secondary">Disponible à la location</button>
                        <button class="btn btn-success">Ajouter une location</button><br><br>
