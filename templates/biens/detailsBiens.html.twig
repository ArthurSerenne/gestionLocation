                        <table>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th class="thBis">Date entrée</th>
                                <th class="thBis">Date sortie</th>
                                <th class="thBis">Locataire</th>
                                <th class="thBis">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
